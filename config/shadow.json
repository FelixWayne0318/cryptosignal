{
  "enabled": true,
  "mode": "shadow",
  "description": "影子运行配置 - 测试新规范实施效果",

  "test_symbols": [
    "BTCUSDT",
    "ETHUSDT",
    "BNBUSDT",
    "SOLUSDT",
    "ADAUSDT"
  ],

  "outputs": {
    "features_a": "shadow_out/features_a_{timestamp}.parquet",
    "features_b": "shadow_out/features_b_modulators.parquet",
    "decision_events": "shadow_out/decision_events.jsonl",
    "dataqual": "shadow_out/dataqual_{timestamp}.parquet"
  },

  "logging": {
    "level": "INFO",
    "file": "shadow_out/shadow_run.log",
    "console": true
  },

  "duration_minutes": 60,
  "interval_seconds": 60,

  "features_to_test": {
    "dataqual": true,
    "standardization_chain": true,
    "modulators_FI": true,
    "ev_calculation": false,
    "publishing_rules": true
  },

  "comparison": {
    "compare_with_current": true,
    "rank_correlation_threshold": 0.90
  }
}
